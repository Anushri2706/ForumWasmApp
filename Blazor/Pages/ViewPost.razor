@page "/"
@inject IPostService postService
@using Domain
@using Domain.Model
@using HttpsClients.ClientInterfaces
@inject NavigationManager navMgr



@if (!string.IsNullOrEmpty(msg))@* display any msg in case it has ny value in case of error*@
{
    <div>
        <span>@msg</span>
    </div>
}

@if (posts == null)
{
    <span>Loading..</span>
}
else if (!posts.Any())
{
    <span>No forums to be found</span>
}
else 
{
    <table class="table justify-content-center">
        
        <thead>
        <tr>
            <th class="text-center">No.</th>
            <th class="text-center">Title</th>
        </tr>
        </thead>
        <tbody>
        @foreach (Post post in posts)
        {
            <tr>
                <td class="text-center">@post.Id</td>
                <td class="text-center" @onclick="() => Open(post.Id)">@post.Title</td>
            </tr>
        }

        </tbody>
    </table>
}


@code {

    [Parameter]
    public int Id { get; set; }

    private IEnumerable<Post>? posts;
    private Post post;
    private string msg = "";
    private string title = "";
    private string body = "";


    protected override async Task OnInitializedAsync()
    {
        msg = "";
        try
        {
            posts = await postService.GetPosts();
        }
        catch (Exception e)
        {
            Console.WriteLine(e);
            msg = e.Message;
        }
    }

    private async void Open(int id)
    {
        await postService.GetPostById(id);
        navMgr.NavigateTo($"/OpenPost/{id}");
    }


}